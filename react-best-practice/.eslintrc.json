{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "semi": ["warn", "always"],
        "no-unused-vars": ["error"],
        "no-var": ["error"],
        "quotes": ["error", "double"]
    },
    "settings": {
        "react": {
          "version": "detect"
        }
    }
}
